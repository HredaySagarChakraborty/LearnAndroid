        "

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_margin="10dp"
        android:src="@drawable/toggle"
        android:layout_width="match_parent"
        android:layout_height="180dp" />


    <ImageView
        android:layout_margin="10dp"
        android:src="@drawable/images2"
        android:layout_width="match_parent"
        android:layout_height="180dp" />



</LinearLayout>