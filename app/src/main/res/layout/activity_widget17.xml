<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Widget17Activity">




    <TextView

        android:text="Specialized ViewSwitcher that contains only children of type TextView. A TextSwitcher is useful to animate a label on screen. Whenever setText(java.lang.CharSequence) is called, TextSwitcher animates the current text out and animates the new text in.
        "




        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_margin="5dp"
        android:src="@drawable/textswitch"
        android:layout_width="match_parent"
        android:layout_height="180dp" />


    <ImageView
        android:layout_margin="5dp"
        android:src="@drawable/textswitcher2"
        android:layout_width="match_parent"
        android:layout_height="180dp" />






</LinearLayout>